#!/usr/bin/env node

var debug = require('debug')('kernel');

if (process.getuid()) {
  console.error("The kernel must be run as root. Exiting...");
  process.exit(1);
}
var app = require('../app');

var server = app.listen(app.get('port'), function() {
  debug('Kernel listening on port ' + server.address().port);
  debug('Executing init script...');
});
